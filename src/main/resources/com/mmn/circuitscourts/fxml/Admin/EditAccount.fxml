<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="stackPane" minHeight="800.0" minWidth="1200.0" style="-fx-background-color: white;" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mmn.circuitscourts.controller.admin.EditAccountController">
    <children>
        <BorderPane fx:id="container" prefHeight="700.0" prefWidth="1000.0">
            <left>
                <fx:include source="Sidebar.fxml" />
            </left>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onMouseClicked="#onBackButton" styleClass="back-button" text="Retour">
                            <graphic>
                                <Region styleClass="back-button-img" />
                            </graphic>
                        </Button>
                  <HBox>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <children>
                              <Label fx:id="title" prefHeight="35.0" prefWidth="658.0" styleClass="main-title" text="Modification du compte n°" />
                        <Pane prefHeight="35.0" prefWidth="192.0">
                           <children>
                              <VBox fx:id="errorPopup" layoutX="-201.0" layoutY="-52.0" maxHeight="114.0" minWidth="400.0" prefHeight="114.0" prefWidth="400.0" styleClass="errorPopup" visible="false">
                                 <HBox.margin>
                                    <Insets left="325.0" />
                                 </HBox.margin>
                                 <children>
                                    <VBox maxHeight="4.0" minHeight="4.0" prefHeight="4.0" prefWidth="339.0" styleClass="errorPopup-indicator" />
                                    <HBox prefHeight="120.0" prefWidth="340.0" styleClass="errorPopup-container">
                                       <children>
                                          <Label prefHeight="17.0" prefWidth="33.0">
                                             <padding>
                                                <Insets left="10.0" top="17.0" />
                                             </padding>
                                             <graphic>
                                                <Region styleClass="errorPopup-img" />
                                             </graphic>
                                          </Label>
                                          <VBox prefHeight="110.0" prefWidth="312.0">
                                             <children>
                                                <Label styleClass="errorPopup-title" text="Erreur !" />
                                                <Label fx:id="popupMessage" styleClass="errorPopup-subtitle" />
                                             </children>
                                             <padding>
                                                <Insets left="15.0" top="15.0" />
                                             </padding>
                                          </VBox>
                                          <VBox alignment="TOP_RIGHT" prefHeight="120.0" prefWidth="57.0">
                                             <children>
                                                <Button mnemonicParsing="false" onMouseClicked="#onClosePopup" prefHeight="28.0" prefWidth="28.0" styleClass="successPopup-close">
                                                   <graphic>
                                                      <Region styleClass="successPopup-close-img" />
                                                   </graphic>
                                                   <VBox.margin>
                                                      <Insets right="15.0" top="20.0" />
                                                   </VBox.margin>
                                                </Button>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </Pane>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="427.0" prefWidth="871.0" spacing="30.0">
                     <children>
                        <VBox maxHeight="300.0" prefWidth="400.0" styleClass="profil-container">
                           <children>
                              <VBox alignment="CENTER_LEFT" maxHeight="56.0" prefHeight="200.0" prefWidth="100.0" styleClass="profil-container-header">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                                 <children>
                                    <Label styleClass="profil-container-header-title" text="Détails du compte" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="238.0" prefWidth="398.0" spacing="20.0">
                                 <children>
                                            <TextField fx:id="identifiant" maxWidth="250.0" minHeight="40.0" minWidth="250.0" prefWidth="150.0" promptText="Identifiant" />
                                            <TextField fx:id="mdp" maxWidth="250.0" prefHeight="40.0" prefWidth="250.0" promptText="Nouveau mot de passe" />
                                            <ComboBox fx:id="grade" minHeight="40.0" minWidth="250.0" prefWidth="150.0" promptText="Selectionner le grade" />
                                 </children>
                                 <padding>
                                    <Insets left="30.0" top="40.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox fx:id="entityContainer" maxHeight="250.0" prefHeight="272.0" prefWidth="400.0" styleClass="profil-container">
                           <children>
                              <VBox alignment="CENTER_LEFT" maxHeight="56.0" prefHeight="200.0" prefWidth="100.0" styleClass="profil-container-header">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                                 <children>
                                    <Label styleClass="profil-container-header-title" text="Liaison de l'entité" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="178.0" prefWidth="398.0" spacing="20.0">
                                 <children>
                                    <ComboBox fx:id="entityCb" minHeight="40.0" minWidth="250.0" prefWidth="150.0" />
                                 </children>
                                 <padding>
                                    <Insets left="30.0" top="40.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button id="cmdButton" minHeight="40.0" minWidth="192.0" mnemonicParsing="false" onMouseClicked="#onEditButton" styleClass="addCommandeButton" text="Modifier le compte" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="20.0" />
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
